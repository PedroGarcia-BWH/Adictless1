<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".RegisterActivity1">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/decline"
        android:layout_width="138dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/loginbtn"
        android:text="Rechazar"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/accept"
        android:layout_width="138dp"
        android:layout_height="44dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/loginbtn"
        android:text="Aceptar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.709"
        app:layout_constraintStart_toEndOf="@+id/decline"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="315dp"
        android:layout_height="213dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="46dp"
        android:fontFamily="sans-serif-thin"
        android:text='Todos los datos registrados en esta aplicación son para fines académicos, ningún dato será compartido a terceros, respetando la ley vigente en la Unión Europea, si esta de acuerdo con las conndiciones pulse ACEPTAR, en caso contrario pulse RECHAZAR"'
        android:textColor="#090909"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>