<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Cuenta">

        <EditTextPreference
            app:key="signature"
            app:title="Modificar correo electrónico" />

        <EditTextPreference
            android:key="Modificar contraseña"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Modificar contraseña" />
        <EditTextPreference
            android:key="edit_text_preference_1"
            android:singleLine="true"
            android:title="Modificar nombre de usuario" />


    </PreferenceCategory>

    <PreferenceCategory app:title="Mensajes">

        <SwitchPreferenceCompat
            android:defaultValue="true"
