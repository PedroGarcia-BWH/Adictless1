<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Cuenta">

        <EditTextPreference
            android:key="Modificaremail"
            app:title="Modificar correo electrónico" />

        <EditTextPreference
            android:key="Modificarcontraseña"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Modificar contraseña" />
        <EditTextPreference
            android:key="Modificaruser"
            android:singleLine="true"
            android:title="Modificar nombre de usuario" />


    </PreferenceCategory>

    <PreferenceCategory app:title="Mensajes">

        <SwitchPreferenceCompat
            android:defaultValue="true"

            app:title="Recibir notificaciones"
            android:singleLine="true"/>
    </PreferenceCategory>



</PreferenceScreen>