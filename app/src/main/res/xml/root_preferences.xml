<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Cuenta">

        <EditTextPreference
            android:dialogTitle="Introduce un nuevo Email"
            android:key="Modificaremail"
            android:title="Modificar correo electrónico"
            android:defaultValue=""/>

        <EditTextPreference
            android:dialogTitle="Introduce una nueva Contraseña"
            android:key="Modificarcontrasena"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Modificar contraseña"
            android:defaultValue=""/>
        <EditTextPreference
            android:dialogTitle="Introduce un nuevo Usuario"
            android:key="Modificaruser"
            android:singleLine="true"
            android:title="Modificar nombre de usuario"
            android:defaultValue=""/>


    </PreferenceCategory>

    <PreferenceCategory app:title="Mensajes">

        <SwitchPreferenceCompat
            android:id="@+id/notifications"
            android:defaultValue="true"

            app:title="Recibir notificaciones"
            android:singleLine="true"/>
    </PreferenceCategory>

    <Preference
        android:layout="@layout/button_settings"
        android:key="saveChanges"
        ></Preference>
</PreferenceScreen>